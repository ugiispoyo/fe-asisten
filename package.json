{
  "name": "local-fe-assistant",
  "version": "1.0.0",
  "description": "Local frontend coding assistant (React + TS + Tailwind) with memory, powered by Ollama",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:stack": "sh scripts/dev-stack.sh",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "multer": "2.0.2",
    "ollama": "^0.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "author": "Ugi Ispoyo Widodo",
  "license": "ISC"
}
